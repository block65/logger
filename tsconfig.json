{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "target": "es2020",
    "noUncheckedIndexedAccess": true,
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "inlineSources": false,
    "noEmitOnError": false,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "./lib"
  ]
}
