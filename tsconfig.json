{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "target": "es2021",
    "lib": ["es2021"],
    "module": "esnext",
    "inlineSources": false,
    "noEmitOnError": false,
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./lib", "./__tests__"]
}
